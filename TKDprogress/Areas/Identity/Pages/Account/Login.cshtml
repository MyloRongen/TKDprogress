@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-xl sm:px-20 pt-40 px-2">@ViewData["Title"]</h1>
<div class="flex flex-wrap px-2 sm:px-20">
    <div class="w-full md:w-1/2 lg:w-1/3">
        <section>
            <form id="account" method="post" class="mb-4">
                <h2 class="text-lg font-semibold">Use a local account to log in.</h2>
                <hr class="my-2" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <input asp-for="Input.Email" class="w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="sr-only">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Input.Password" class="w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="sr-only">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 flex items-center">
                    <input class="mr-2" asp-for="Input.RememberMe" type="checkbox" />
                    <label asp-for="Input.RememberMe" class="text-sm">Remember me</label>
                </div>
                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-full py-2 px-4 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Log in</button>
                </div>
                <div class="text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500 hover:underline">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-500 hover:underline">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-blue-500 hover:underline">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="w-full md:w-1/2 lg:w-2/3 md:pl-10">
        <section>
            <h3 class="text-lg font-semibold">Use another service to log in.</h3>
            <hr class="my-2" />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-blue-500 hover:underline">article about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div class="mb-3">
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="mr-2 py-2 px-4 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
