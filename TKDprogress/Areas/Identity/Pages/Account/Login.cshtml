@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="w-full bg-black">
    <div class="grid md:grid-cols-4 items-center h-screen px-2 md:px-20">
        <div class="w-full md:col-start-1 md:col-span-2">
            <section class="flex w-full justify-center">
                <img src="@Url.Content("~/Images/Main/TKDPLogo.png")" class="w-60 md:w-[300px] lg:w-[500px] h-60 md:h-[300px] lg:h-[500px]" />
            </section>
        </div>
        <div class="w-full md:col-start-3 md:col-span-2">
            <section>
                <form id="account" method="post" class="mb-4">
                    <h2 class="text-4xl font-semibold text-white">Strive, Achieve, Progress with TKDProgress!</h2>

                    <div asp-validation-summary="ModelOnly" class="text-red-700" role="alert"></div>
                    <div class="mb-3 pt-10">
                        <input asp-for="Input.Email" class="w-full md:w-96 py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="sr-only">Email</label>
                        <span asp-validation-for="Input.Email" class="text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="w-full md:w-96 py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="sr-only">Password</label>
                        <span asp-validation-for="Input.Password" class="text-red-700"></span>
                    </div>
                    <div class="mb-3 flex items-center">
                        <input class="mr-2 rounded-sm" asp-for="Input.RememberMe" type="checkbox" />
                        <label asp-for="Input.RememberMe" class="text-sm text-white">Remember me</label>
                    </div>
                    <div class="mb-3">
                        <button id="login-submit" type="submit" class="w-full md:w-96 py-2 px-4 bg-[#68AEFF] text-white font-medium rounded-md hover:bg-[#47A0FF] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Log in</button>
                    </div>
                    <div class="text-start">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-[#68AEFF] hover:underline">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-[#68AEFF] hover:underline">Register as a new user</a>
                        </p>
@*                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-[#68AEFF] hover:underline">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
        </div>
    </div> 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
