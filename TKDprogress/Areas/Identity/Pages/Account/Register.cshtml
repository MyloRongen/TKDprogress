@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="w-full bg-black">
    <div class="grid md:grid-cols-4 items-center h-screen px-2 md:px-20">
        <div class="w-full md:col-start-1 md:col-span-2">
            <section class="flex w-full justify-center">
                <img src="@Url.Content("~/Images/Main/TKDPLogo.png")" class="w-60 md:w-[300px] lg:w-[500px] h-60 md:h-[300px] lg:h-[500px]" />
            </section>
        </div>
        <div class="w-full md:col-start-3 md:col-span-2">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-4">
                    <h2 class="text-4xl font-semibold text-white">Strive, Achieve, Progress with TKDProgress!</h2>

                    <div asp-validation-summary="ModelOnly" class="text-red-700" role="alert"></div>
                    <div class="mb-3 pt-10">
                        <input asp-for="Input.Email" class="w-full md:w-96 py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Input.Password" class="w-full md:w-96 py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Input.ConfirmPassword" class="w-full md:w-96 py-2 px-3 border border-gray-300 rounded-md shadow-sm" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <button id="registerSubmit" type="submit" class="w-full md:w-96 py-2 px-4 bg-[#68AEFF] text-white font-medium rounded-md hover:bg-[#47A0FF] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:[#68AEFF]">Register</button>
                    </div>
                    <div class="text-start">
                        <p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-[#68AEFF] hover:underline">Login with an existing account</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
