@model MovementViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="px-12 pt-10 h-screen">
    <h1 class="text-3xl font-medium">Delete</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="text-red-700">
            @TempData["ErrorMessage"]
        </div>
    }

    <h3 class="pt-10 text-xl">Are you sure you want to delete this?</h3>

    <div class="pt-10">
        <h4 class="text-2xl font-bold">Movement</h4>
        <hr class="my-4">
        <dl class="grid grid-cols-2 gap-x-4 gap-y-2">
            <dt class="text-sm font-medium text-gray-500">Id</dt>
            <dd class="text-sm">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="text-sm font-medium text-gray-500">name</dt>
            <dd class="text-sm">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="text-sm font-medium text-gray-500">Image</dt>
            <dd class="text-sm">
                <img src="@Url.Content("~/Images/" + Model.ImageUrl)" class="h-96" />
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="inline-block bg-red-700 hover:bg-red-800 text-white font-bold py-2 px-4 rounded" /> |
        <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900">Back to List</a>
    </form>
</div>
